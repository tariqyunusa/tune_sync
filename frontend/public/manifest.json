{
    "manifest_version": 3,
    "name": "TuneSync",
    "description": "Sync and convert playlists across music streaming platforms.",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["https://api.spotify.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    
    "content_scripts": [
      {
        "matches": ["https://api.spotify.com/*"],
        "js": ["content.js"]
      }
    ],
    "oauth2": {
      "client_id": "65ad9a920fc5419e85bf6a978cc19858",
      "scopes": [
        "playlist-read-private",
        "playlist-modify-public",
        "playlist-modify-private"
      ]
    }
  }
  